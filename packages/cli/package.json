{
  "name": "@mcp-weave/cli",
  "version": "0.1.1",
  "description": "CLI for MCP-Weave - generate, extract, and manage MCP servers",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-weave": "./bin/mcp-weave.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage"
  },
  "dependencies": {
    "@mcp-weave/core": "workspace:*",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^20.11.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.3.0"
  },
  "keywords": [
    "mcp",
    "cli",
    "generator",
    "model-context-protocol"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mcp-weave/mcp-weave.git",
    "directory": "packages/cli"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
