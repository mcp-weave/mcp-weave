{
  "name": "@mcp-weave/testing",
  "version": "0.1.0",
  "description": "Testing utilities for MCP-Weave",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage"
  },
  "dependencies": {
    "@mcp-weave/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.3.0"
  },
  "keywords": [
    "mcp",
    "testing",
    "mock",
    "model-context-protocol"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mcp-weave/mcp-weave.git",
    "directory": "packages/testing"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
